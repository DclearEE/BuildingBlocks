{
  "$schema": "https://hypar.io/schemas/function.json",
  "description": "Creates a building envelope by fitting a shape to a footprint boundary.",
  "id": "68c01fb0-5980-4947-93bd-a801cdd9a509",
  "name": "Mass",
  "model_dependencies": ["site"],
  "model_output": "envelope",
  "repository_url": "https://github.com/hypar-io/function",
  "inputs": [
    {
      "min": 50.0,
      "max": 200.0,
      "step": 1.0,
      "name": "Building Height",
      "description": "Overall height of the building from grade.",
      "type": "range"
    },
    {
      "min": 5.0,
      "max": 20.0,
      "step": 1.0,
      "name": "Foundation Depth",
      "description": "Depth of the building envelope below grade.",
      "type": "range"
    },
    {
      "min": 10.0,
      "max": 50.0,
      "step": 5.0,
      "name": "Setback Interval",
      "description": "Vertical distance between setbacks.",
      "type": "range"
    },
    {
      "min": 1.0,
      "max": 10.0,
      "step": 0.5,
      "name": "Setback Depth",
      "description": "Depth of each setback from the previous plinth.",
      "type": "range"
    }
  ],
  "outputs": [
    {
      "name": "Height",
      "description": "Height of the building.",
      "type": "number"
    },
    {
      "name": "Subgrade",
      "description": "Depth of the subgrade section.",
      "type": "number"
    },
    {
      "name": "Interval",
      "description": "Vertical distance between setbacks.",
      "type": "number"
    },
    {
      "name": "Setback",
      "description": "Setback offset from previous interval.",
      "type": "number"
    },
    {
      "name": "Volume",
      "description": "Building envelope volume including subgrade section.",
      "type": "number"
    }
  ]
}